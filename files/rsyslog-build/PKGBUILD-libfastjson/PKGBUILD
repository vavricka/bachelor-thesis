pkgbase=libfastjson
pkgname=${pkgbase}
pkgver=master
pkgrel=1
arch=('armv7h' 'armv7sp')
license='custom'

build() {
	cd ${startdir}/${pkgbase}-${pkgver}
	PKG_CONFIG_PATH=/mnt/hdd_1/lib/pkgconfig
	export ACLOCAL_PATH=$(dirname $(dirname $(which libtool)))/share/aclocal  #HACK

	sh autogen.sh
	./configure --prefix=/mnt/hdd_1
	make V=1
}

package() {
	cd ${startdir}/${pkgname}-${pkgver}
	make install DESTDIR=${pkgdir}
}