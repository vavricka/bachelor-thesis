pkgbase=liblogging
pkgname=${pkgbase}
pkgver=1.0.5
pkgrel=1
arch=('armv7h' 'armv7sp')
license='custom'

build() {
	cd ${startdir}/${pkgbase}-${pkgver}
	PKG_CONFIG_PATH=/mnt/hdd_1/lib/pkgconfig
	./configure --prefix=/mnt/hdd_1 --disable-journal
	make V=1
}

package() {
	cd ${startdir}/${pkgname}-${pkgver}
	make install DESTDIR=${pkgdir}
}